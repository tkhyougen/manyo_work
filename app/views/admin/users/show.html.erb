<p id="notice"><%= notice %></p>

<div class="show">
  <p>
    <strong>ID:</strong><%= @user.id %>
  </p>

  <p>
    <strong>名前:</strong><%=@user.name %>
  </p>

  <p>
    <strong>Email:</strong><%=@user.email %>
  </p>

  <p>
    <strong>管理者:</strong><%= "いいえ" unless @user.admin? %>
  </p>

  <p>
    <strong>作成日</strong><%=@user.created_at.strftime("%Y-%m-%d%H:%M") %>
  </p>

  <p>
    <strong>アップデート日:</strong><%=@user.updated_at.strftime("%Y-%m-%d%H:%M") %>
  </p>

  <p>
    <strong>タスク一覧:</strong>
    <br>
    <table>
      <thead>
        <tr>
          <th>タスク名</th>
          <th>詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr class = "task_row">
            <td><%= task.name %></td>
            <td><%= task.detail %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </p>

  <div class="button">
    <%= link_to '編集', edit_admin_user_path(@user) %>
    <%= link_to '戻る', admin_users_path %>
    <%= link_to '削除', [:admin, @user], method: :delete, data: { confirm: '本当に削除しますか？' } %>
  </div>
</div>
