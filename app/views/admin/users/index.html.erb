<h2>管理画面　ユーザー一覧</h2>
<%= link_to "新規登録", new_admin_user_path , class:"btn btn-primary" %>

<div class="table_responsive">
  <div class="task_table">
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">名前</th>
        <th scope="col">Emailアドレス</th>
        <th scope="col">管理者権限</th>
        <th scope="col">作成日</th>
        <th scope="col">アップデート日</th>
        <th scope="col">タスク数</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody class="admin_row">
      <% @users.each do |user| %>
        <tr class="admin_narabi">
          <td><%= user.name %> </td>
          <td><%= user.email %></td>
          <td><%= "〇" if user.admin? %></td>
          <td><%= user.created_at.strftime("%Y-%m-%d%H:%M") %></td>
          <td><%= user.updated_at.strftime("%Y-%m-%d%H:%M") %></td>
          <td><%= user.tasks.count %> </td>
          <td></td>
          <td><%= link_to '詳細', admin_user_path(user), class:"btn btn-primary mr-3" %></td>
          <td><%= link_to '編集', edit_admin_user_path(user), class: "btn btn-success"%></td>
          <td><%= link_to '削除', [:admin, user], method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<%= paginate (@users) %>
